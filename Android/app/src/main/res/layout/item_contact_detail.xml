<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/spacing_normal">

    <ImageView
        android:id="@+id/btn_voice_call"
        android:layout_width="@dimen/size_button_normal"
        android:layout_height="@dimen/size_button_normal"
        android:padding="@dimen/spacing_micro"
        android:src="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/color_accent" />

    <ImageView
        android:id="@+id/btn_send_message"
        android:layout_width="@dimen/size_button_normal"
        android:layout_height="@dimen/size_button_normal"
        android:padding="@dimen/spacing_micro"
        android:src="@drawable/ic_message_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/color_accent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_normal"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/btn_send_message"
        app:layout_constraintStart_toEndOf="@+id/btn_voice_call">

        <TextView
            android:id="@+id/txt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_extra_micro"
            android:textColor="@color/color_accent"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/txt_phone_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_accent"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>